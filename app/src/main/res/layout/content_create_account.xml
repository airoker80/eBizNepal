<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.paybyonline.ebiz.Activity.CreateAccountActivity"
    tools:showIn="@layout/activity_create_account">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                style="@style/Customtextview"
                android:paddingTop="@dimen/padding_top"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/emailTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Username / Email"
                android:textColorHint="#2b2b2b"
                style="@style/EditTextStyle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                style="@style/Customtextview"
                android:paddingTop="@dimen/padding_top"/>
            <EditText
                android:id="@+id/pwdTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textWebPassword"
                android:hint="Password (Sample- Abcd123*)"
                android:textColorHint="#2b2b2b"
                style="@style/EditTextStyle"/>

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number "
                style="@style/Customtextview"
                android:paddingTop="@dimen/padding_top"
               />
            <EditText
                android:id="@+id/mobno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Enter your mobile number"
                style="@style/EditTextStyle"
               />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partner Code "
                android:visibility="gone"
                style="@style/Customtextview"
                android:paddingTop="@dimen/padding_top"
               />
            <EditText
                android:id="@+id/partnerCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
                android:hint="Partner code"
                style="@style/EditTextStyle"/>
            <CheckBox
                android:id="@+id/showPasswordCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Customtextview"
                android:text="Show Password"/>



            <Button
                android:id="@+id/regBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:layout_marginLeft="7dp"
                android:layout_alignParentLeft="true"
                style="@style/CustomButton"
                android:layout_marginTop="10dp"/>



        </LinearLayout>

    </ScrollView>

</LinearLayout>

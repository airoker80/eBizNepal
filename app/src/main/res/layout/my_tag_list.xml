<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/effect"
    android:descendantFocusability="blocksDescendants"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_marginLeft="@dimen/layout_margin"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="42"
                android:id="@+id/availableServiceCount"
                android:layout_marginLeft="@dimen/text_space"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circle_view"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/circle"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:background="#CECECE"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"


            >
            <TextView
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Recharge"
                android:textColor="#3E3E3E"
                android:id="@+id/serviceName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/fontsize"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8F8D8E"
                android:id="@+id/serviceType"
                android:layout_below="@+id/serviceName"
                android:layout_alignLeft="@+id/serviceName"
                android:layout_alignStart="@+id/serviceName"
                android:textSize="@dimen/size"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CECECE"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="20dp"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.paybyonline.ebiz.Activity.InitialLoadingActivity"
    tools:showIn="@layout/activity_initial_loading">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7">

        <ImageView
            android:id="@+id/ivPlayOverlay"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="false"
            tools:src="@drawable/ic_new_logo" />

        <TextView
            android:id="@+id/textHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPlayOverlay"
            android:text="No Internet Connection Found"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textbase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textHead"
            android:text="Check your connection and try again"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="@dimen/width_refresh"
            android:layout_height="@dimen/height_refresh"
            android:layout_below="@+id/textbase"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:foreground="@drawable/effect"
            android:src="@drawable/refresh_button" />


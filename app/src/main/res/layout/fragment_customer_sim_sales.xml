<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paybyonline.ebiz.Fragment.CustomerSimSalesFragment"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    style="@style/Customtextview"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    style="@style/EditTextStyle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer's Permanent Address:"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"
                    android:textColor="#EF8020"
                    android:textSize="@dimen/text_size"
                    android:layout_marginLeft="@dimen/margin_left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/districts_nepal"
                    android:paddingTop="@dimen/space_top">

                </android.support.v7.widget.AppCompatSpinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VDC/ Municipality"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    style="@style/EditTextStyle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ward Number"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/EditTextStyle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="House Number"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/EditTextStyle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tole/ Street Address"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
                    style="@style/EditTextStyle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer's Temporary Address:"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"
                    android:textColor="#EF8020"
                    android:textSize="@dimen/text_size"
                    android:layout_marginLeft="@dimen/margin_left"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/districts_nepal"
                    android:paddingTop="@dimen/space_top">

                </android.support.v7.widget.AppCompatSpinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VDC/ Municipality"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    style="@style/EditTextStyle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ward Number"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/EditTextStyle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="House Number"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/EditTextStyle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tole/ Street Address"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
                    style="@style/EditTextStyle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Father's Name"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    style="@style/EditTextStyle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grandfather's Name"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    style="@style/EditTextStyle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Type:"
                    android:textColor="#EF8020"
                    android:textSize="@dimen/text_size"
                    android:paddingTop="@dimen/padding_top"/>

                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/RelativeLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/mytextview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Citizenship Number"
                        style="@style/Customtextview"
                        android:paddingTop="@dimen/padding_top"/>
                    <EditText
                        android:layout_width="@dimen/citizen_no_edittext"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        style="@style/EditTextStyle"
                        android:layout_below="@+id/mytextview1"/>

                    <TextView
                        android:id="@+id/mytextview2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/mytextview1"
                        android:layout_toEndOf="@+id/mytextview1"
                        android:gravity="right"
                        android:text="Issued Date"
                        style="@style/Customtextview"
                        android:paddingTop="@dimen/padding_top"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mytextview2"
                        android:text="22-11-2016"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        style="@style/CustomButton"
                        android:background="@drawable/btn_shape"
                        android:padding="10dp"
                        android:paddingTop="@dimen/space_top"/>

                </RelativeLayout>
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/RelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/mytext_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Passport Number"
                        style="@style/Customtextview"
                        android:paddingTop="@dimen/padding_top"/>
                    <EditText

                        android:layout_width="@dimen/citizen_no_edittext"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        style="@style/EditTextStyle"
                        android:layout_below="@+id/mytext_no"/>

                    <TextView
                        android:id="@+id/txt_issue_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/mytext_no"
                        android:layout_toEndOf="@+id/mytext_no"
                        android:gravity="right"
                        android:text="Issued Date"
                        style="@style/Customtextview"
                        android:paddingTop="@dimen/padding_top"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_issue_date"
                        android:text="22-11-2016"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        style="@style/CustomButton"
                        android:background="@drawable/btn_shape"
                        android:padding="10dp"
                        android:paddingTop="@dimen/space_top"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIM/ RUID Card Serial Number"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="19 digit number"
                    style="@style/EditTextStyle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    style="@style/Customtextview"
                    android:paddingTop="@dimen/padding_top"/>

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="--Select a number--"
                    android:textColor="#3E3E3E"
                    android:textColorHint="#dedada"
                    android:paddingTop="@dimen/space_top"
                    android:textSize="@dimen/font_size"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document:"
                    android:textColor="#EF8020"
                    android:textSize="@dimen/text_size"
                    android:paddingTop="@dimen/padding_top"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="95dp"
                            android:background="@drawable/btn_shape"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:clickable="true"
                            android:foreground="@drawable/effect"
                            android:descendantFocusability="blocksDescendants">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Browse"
                                android:textColor="#4285F4"
                                android:textSize="@dimen/text_size"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                />
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/photo_camera"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:layout_marginTop="15dp"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="95dp"
                            android:background="@drawable/btn_shape"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginLeft="30dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_launcher"
                                android:scaleType="fitXY"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"

                               />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="95dp"
                            android:background="@drawable/btn_shape"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:clickable="true"
                            android:foreground="@drawable/effect"
                            android:descendantFocusability="blocksDescendants">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Browse"
                                android:textColor="#4285F4"
                                android:textSize="@dimen/text_size"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                />
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/photo_camera"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:layout_marginTop="15dp"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="95dp"
                            android:background="@drawable/btn_shape"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginLeft="30dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_launcher"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                             />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomButton"
                    android:text="SUBMIT"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
        </ScrollView>

</LinearLayout>

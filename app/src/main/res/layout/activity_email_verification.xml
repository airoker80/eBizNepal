<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_6sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/_14sdp"
                android:textColor="#9da3a5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="EMAIL VERIFICATION"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/welcome_to"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Welcome To paybyonline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/brandImageView"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:src="@drawable/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:id="@+id/verficationUsername"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Hello sameer manandhar"/>
            <TextView
                android:id="@+id/verifiy_details_txt"
                android:layout_marginTop="@dimen/_6sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Verifying your paybyonline account helps make paybyonline even safer for everyone. When you’re verified, it means that you’ve provided a little more information about yourself to help confirm your identity. Please verify your account by clicking on button below."/>

            <Button
                android:id="@+id/verifiyAccountEmail"
                android:layout_marginTop="@dimen/_6sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:padding="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/shape_email_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify your Account"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/hiddenLinearLayout">
                <TextView
                    android:layout_marginTop="@dimen/_6sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="We have sent you an email with verification link.If the account does not exist please click the Update button to update valid email-address. "/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:text="Please "/>
                    <TextView
                        android:id="@+id/updateEmail"
                        android:clickable="true"
                        android:textColor="#1b75b6"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:text=" Update "/>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/gone_et_layout">
                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email address:"
                        android:textColor="#000000"/>
                    <EditText
                        android:id="@+id/et_email_address"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:textSize="@dimen/_16sdp"
                        android:background="@drawable/shape_edittext_verification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/submitEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/shape_email_verification"
                        android:padding="@dimen/_10sdp"
                        android:text="Submit"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="Thanks,"/>

            <TextView
                android:id="@+id/teamId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="paybyonline Team"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="@dimen/_65sdp"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:text="Go to "
                    android:id="@+id/textView2" />
                <TextView
                    android:clickable="true"
                    android:id="@+id/gotoDashbord"
                    android:textColor="#1b75b6"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dashboard"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_alignLeft="@+id/textView2"/>


            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    >


    <ImageView
        android:id="@+id/fav_logo"
        android:src="@drawable/flight"
        android:layout_marginLeft="@dimen/check_box"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp" />
    <TextView
        android:layout_toRightOf="@+id/fav_logo"
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Broadlink Internet"
        android:textSize="@dimen/title_text"
        android:textColor="#3E3E3E"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/check_box"
        android:minLines="2">
    </TextView>

    <CheckBox
        android:layout_marginRight="@dimen/check_box"
        android:layout_marginTop="15dp"
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:buttonTint="@color/colorAll"
        android:checked="true"
        >
    </CheckBox>

</RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Category"
            />
        <Spinner
            android:id="@+id/serviceCategorySpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showHideServiceType"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Type"
            android:layout_marginBottom="3dp"
            android:textSize="@dimen/size"
            android:textColor="@color/colorAll"
            android:layout_marginTop="@dimen/serv_type"
            android:layout_marginLeft="@dimen/check_box"/>

        <ListView
            android:id="@+id/serviceCategoryServiceTypeList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            android:layout_marginTop="15dp"
            android:scrollbars="none"
            />
    </LinearLayout>


</LinearLayout>

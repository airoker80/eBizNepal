<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-Wallet"
                android:textSize="24px"
                android:paddingBottom="10dp"/>
            <TextView
                android:id="@+id/ava_Bal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/enter_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Amount : Rs.10"
                android:paddingBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ewalletDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/senderCurrTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nepal Rupees : Rs25"
                android:textSize="35dp"
                android:paddingBottom="5dp"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sent Amount"
                android:textStyle="bold"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/sendToTxt"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/currTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/ewalletTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PSP :"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/pspTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PSP :"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/totalAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total :Nepal Rupees 4858.88"
                android:paddingBottom="5dp"/>

        </LinearLayout>
        <Button
            android:id="@+id/btnPayNow"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>
</ScrollView>
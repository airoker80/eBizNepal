<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e5e5e5">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/white"/>
    <LinearLayout
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/airlineImg"
                android:padding="@dimen/_8sdp"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_airplane"/>

        </LinearLayout>
        <LinearLayout android:layout_marginLeft="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="3"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/flightTime"
                    android:textColor="#777777"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7:30-8:00"/>
                <TextView
                    android:layout_marginTop="@dimen/_4sdp"
                    android:id="@+id/airlineName"
                    android:textColor="#777777"
                    android:textSize="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saurya Airline"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/flightClass"
                    android:textColor="#777777"
                    android:textSize="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class : Y"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:inputType="textCapWords|textCapSentences"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type : "
                        android:textColor="#777777"
                        android:alpha="0.7"
                        android:textSize="@dimen/_8sdp" />
                    <TextView
                        android:inputType="textCapWords|textCapSentences"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:id="@+id/flightType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#777777"
                        android:alpha="0.7"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>

<!--
                <TextView
                    android:layout_marginTop="@dimen/_4sdp"
                    android:id="@+id/flightType"
                    android:textColor="#777777"
                    android:textSize="@dimen/_8sdp"
                    android:inputType="textCapWords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type : Beech"/>
-->
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/primaryNepflight"
                    android:textSize="@dimen/_6sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NPR"/>
                <TextView
                    android:layout_marginTop="@dimen/_1sdp"
                    android:id="@+id/flightPrice"
                    android:textColor="@color/primaryNepflight"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5781.00"/>
            </LinearLayout>
            <CheckBox
                android:layout_marginTop="5dp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_weight="1"
                android:gravity="end"
                android:id="@+id/checkFlight1"
                android:layout_gravity="center"
                android:button="@drawable/flight_checkbox_twoway_selector"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_20sdp" />
        </LinearLayout>


    </LinearLayout>
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/white"/>

</LinearLayout>
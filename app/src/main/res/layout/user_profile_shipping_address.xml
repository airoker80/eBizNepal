<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:orientation="horizontal" >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:longClickable="true"
        android:orientation="vertical"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="5dp"
        card_view:contentPadding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preference"
                    android:textSize="@dimen/title_text"
                    android:textColor="#0B5F92"
                    android:layout_below="@+id/disbletxt"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="7dp"
                    />




                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E7E7E7"
                    android:id="@+id/views1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/pref"
                    android:layout_toRightOf="@+id/stght"
                    android:layout_toEndOf="@+id/stght"
                    android:layout_marginTop="3dp"/>
            </RelativeLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:layout_marginTop="5dp"
                    android:textColor="#3E3E3E"
                    android:textSize="@dimen/textsize"
                    />
                <TextView
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saroj Timsina"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/textsize"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_marginTop="5dp"
                    android:textColor="#3E3E3E"
                    android:textSize="@dimen/textsize"
                    />
                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saroj Timsina"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/textsize"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Name"
                    android:layout_marginTop="5dp"
                    android:textColor="#3E3E3E"
                    android:textSize="@dimen/textsize"
                    />
                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saroj Timsina"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/textsize"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address 1"
                    android:layout_marginTop="5dp"
                    android:textColor="#3E3E3E"
                    android:textSize="@dimen/textsize"
                    />
                <TextView
                    android:id="@+id/address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Maitighar"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/textsize"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address 2"
                    android:layout_marginTop="5dp"
                    android:textColor="#3E3E3E"
                    android:textSize="@dimen/textsize"
                    />
                <TextView
                    android:id="@+id/address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Baneswor"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/textsize"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:layout_marginTop="5dp"
                    android:textColor="#3E3E3E"
                    android:textSize="@dimen/textsize"
                    />
                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kathmandu"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/textsize"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stateLayout"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:layout_marginTop="5dp"
                    android:textColor="#3E3E3E"
                    android:textSize="@dimen/textsize"
                    />
                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/textsize"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zip/Postal Code"
                    android:layout_marginTop="5dp"
                    android:textColor="#3E3E3E"
                    android:textSize="@dimen/textsize"
                    />
                <TextView
                    android:id="@+id/postalCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+977"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/textsize"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:layout_marginTop="5dp"
                    android:textColor="#3E3E3E"
                    android:textSize="@dimen/textsize"
                    />
                <TextView
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nepal"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/textsize"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Name"
                    android:layout_marginTop="5dp"
                    android:textColor="#3E3E3E"
                    android:textSize="@dimen/textsize"
                    />
                <TextView
                    android:id="@+id/com_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nepal"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/textsize"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remark"
                    android:layout_marginTop="5dp"
                    android:textColor="#3E3E3E"
                    android:textSize="@dimen/textsize"
                    />
                <TextView
                    android:id="@+id/remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/textsize"/>
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
